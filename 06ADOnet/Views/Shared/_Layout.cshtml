<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <style>
        .table-hover > tbody > tr:hover {
            background-color: #ff6a00;
        }
        .table-hover_2 > tbody > tr:hover {
            background-color: #c6fffc;
        }
        .table-hover_3 > tbody > tr:hover {
            background-color: #c0efba;
        }
        .table-hover_4 > tbody > tr:hover {
            background-color: #f5fbc1;
        }
        .table-hover_5 > tbody > tr:hover {
            background-color: #afb6ff;
        }

    </style>
    @RenderSection("css", false)
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Northwind", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["emp"] != null)
                    {
                        <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
                        <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                        <li>@Html.ActionLink("Products", "Index", "Products")</li>
                        <li>@Html.ActionLink("Products Categories", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Shippers", "Index", "Shippers")</li>
                        <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                    }
                </ul>

                @if (Session["emp"] != null)
                {
                    <div align="right">@Html.ActionLink(" Logout", "Logout", "Login", null, new { @class = "btn btn-danger glyphicon glyphicon-log-out" })</div>
                    
                }
                @if (Session["emp"] == null)
                {
                    <div align="right">@Html.ActionLink(" Login", "Login", "Login", null, new { @class = "btn btn-primary glyphicon glyphicon-log-in" })</div>
                }
            </div> 
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>