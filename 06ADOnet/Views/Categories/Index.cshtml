@model IEnumerable<_06ADOnet.Models.Categories>

@{
    ViewBag.Title = "Categories List";
}

@section css{

    <style>
        #addCategories {
            display: none;
        }
    </style>

}

<h2>Categories List</h2>

<p>

    <button class="btn btn-success" id="showAddForm"><span class="glyphicon glyphicon-plus"></span>Create New</button>

    @*@Html.ActionLink("Create New", "Create")*@
</p>
<div class="well" id="addCategories">
    @Html.Action("Create")
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Picture)
                </td>*@
            <td>
                @Html.ActionLink(" Edit", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-warning glyphicon glyphicon-edit" })
                @Html.ActionLink(" Details", "Details", new { id = item.CategoryID }, new { @class = "btn btn-info glyphicon glyphicon-list" })
                @Html.ActionLink(" Delete", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>

        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
        $('#showAddForm').click(function () {

            $('#addCategories').fadeToggle(500);
        });

    </script>
}
