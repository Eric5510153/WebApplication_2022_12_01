@model IEnumerable<_06ADOnet.Models.Categories>

@{
    ViewBag.Title = "Categories List";
    
}

@section css{

    <style>
        #addCategories {
            display: none;
        }
    </style>

}

<h2>Categories List</h2>

<p class="text-right">

    <button class="btn btn-success" id="showAddForm"><span class="glyphicon glyphicon-plus"></span>&nbsp Create New</button>

    @*@Html.ActionLink("Create New", "Create")*@
</p>
<div class="well" id="addCategories">
    @Html.Action("Create")
</div>
<table class="table table-striped table-hover_4">
    <thead>
        <tr>
            <th>
               @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th></th>
        </tr>
    </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Action("GetCategoryPhoto",new {id=item.CategoryID})" width="100" />
                    @*@Html.DisplayFor(modelItem => item.Picture)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                
                <td>
                    <button type="button" id="@item.CategoryID" class="btn btn-primary glyphicon glyphicon-list" data-toggle="modal" data-target="#ShowDetailModal" onclick="getDetailData(event)">&nbsp;Details</button>

                    @Html.ActionLink(" Delete", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                    @*@Html.ActionLink(" Edit", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-warning glyphicon glyphicon-edit" })
                        @Html.ActionLink(" Details", "Details", new { id = item.CategoryID }, new { @class = "btn btn-info glyphicon glyphicon-list" })
                        @Html.ActionLink(" Delete", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })*@
                </td>
            </tr>
        }
</table>
<div class="modal fade" id="ShowDetailModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Categories Details</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>&nbsp Exit</button>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        function getDetailData(evt) {
            $('#ShowDetailModal .modal-body').load("/Categories/Details/" + evt.target.id);
            //'#ShowDetailModal .modal-body'  注意需要空格
        }

        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
        $('#showAddForm').click(function () {

            $('#addCategories').fadeToggle(500);
        });

    </script>
}
