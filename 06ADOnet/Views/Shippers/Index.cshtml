@model IEnumerable<_06ADOnet.Models.Shippers>

@{
    ViewBag.Title = "Shippers List";
}
@section css{

    <style>
        #addShippers {
            display: none;
        }
    </style>

}
<h2>Shippers List</h2>

<p>
    <button class="btn btn-success" id="showAddForm"><span class="glyphicon glyphicon-plus"></span>Create New</button>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<div class="well" id="addShippers">
    @Html.Action("Create")
</div>

<table class="table table-striped table-hover_5">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <button type="button" id="@item.ShipperID" class="btn btn-primary glyphicon glyphicon-list" data-toggle="modal" data-target="#ShowDetailModal" onclick="getDetailData(event)">&nbsp;Details</button>

                @Html.ActionLink(" Delete", "Delete", new { id = item.ShipperID }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })


                @*@Html.ActionLink(" Edit", "Edit", new { id = item.ShipperID }, new { @class = "btn btn-warning glyphicon glyphicon-edit" })
                    @Html.ActionLink(" Details", "Details", new { id = item.ShipperID }, new { @class = "btn btn-info glyphicon glyphicon-list" })
                    @Html.ActionLink(" Delete", "Delete", new { id = item.ShipperID }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })*@
            </td>
        </tr>
    }
</table>
<div class="modal fade" id="ShowDetailModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Shippers Details</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>&nbsp Exit</button>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        function getDetailData(evt) {
            $('#ShowDetailModal .modal-body').load("/Shippers/Details/" + evt.target.id);
            //'#ShowDetailModal .modal-body'  注意需要空格
        }

        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
        $('#showAddForm').click(function () {

            $('#addShippers').fadeToggle(500);
        });

    </script>
}