@model IEnumerable<TIDIP_ADO_NET.Models.Admins>

@{
    ViewBag.Title = "Admins";
}
@section css{

    <style>
        #addAdmins {
            display: none;
        }
    </style>

}
<h2>管理員資料表</h2>
<p>
    <button class="btn btn-success" id="showAddForm"><span class="glyphicon glyphicon-plus"></span>&nbsp Create</button>
</p>
<div class="well" id="addAdmins">
    @Html.Action("Create")
</div>
@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdBrithday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdCreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdAccount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdPassword)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdEmail)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdBrithday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdCreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdEmail)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AdIdentity }) |
                @Html.ActionLink("Details", "Details", new { id = item.AdIdentity }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AdIdentity })
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>



        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
        $('#showAddForm').click(function () {

            $('#addAdmins').fadeToggle(800);
        });

    </script>
}
