@model IEnumerable<TIDIP_ADO_NET.Models.Rescues>

@{
    ViewBag.Title = "緊急救護單位資訊";
}
@section css{

    <style>
        #addRescues {
            display: none;
        }
    </style>

}
<h2>緊急救護單位資訊</h2>
<p>
    <button class="btn btn-success" id="showAddForm">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
        </svg>&nbsp 建立資訊&nbsp(管理員)
    </button>
</p>
<div class="well" id="addRescues">
    @Html.Action("Create")
</div>


@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <tr>
        <th>
            緊急救護單位名稱

        </th>
        <th>
            縣市

        </th>
        <th>
            鄉、鎮、市、區

        </th>
        <th>
            地址

        </th>
        <th>
            電話

        </th>
        <th>
            資訊建立時間

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RescueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.County_City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RescueAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RescueCreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RescueTel)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RescueId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RescueId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RescueId })
            </td>
        </tr>

    }

</table>
@section scripts{
    <script>



        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
        $('#showAddForm').click(function () {

            $('#addRescues').fadeToggle(800);
        });

    </script>
}