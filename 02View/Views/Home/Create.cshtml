@model _02View.Models.NightMarket

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form method="post" actions="/Home/Create">

    <p>
        <label for="Id" class="control-label">夜市編號</label>
        <input id="Id" type="text" class="form-control" name="Id" required />
    </p>
    <p>

        <label for="Name" class="control-label">夜市名稱</label>
        <input id="Name " type="text" class="form-control" name="Name" required />

    </p>
    <p>

        <label for="Address" class="control-label">夜市地址</label>
        <input id="Address" type="text" class="form-control" name="Address" required/>

    </p>
    <p>


        <input id="submitl" type="submit" value="送出" class="btn btn-success" style="color:#000000" />

    </p>

</form>
<hr />
@using(Html.BeginForm())
{
<p>
    @Html.LabelFor(model=>model.Id)
    @Html.TextBoxFor(model=>model.Id,new {@class = "form-control" ,required="required" })
</p>
<p>
    @Html.LabelFor(model=>model.Name)
    @Html.TextBoxFor(model=>model.Name,new {@class = "form-control" ,required="required"})
</p>
<p>
    @Html.LabelFor(model=>model.Address)
    @Html.TextBoxFor(model=>model.Address,new {@class = "form-control" ,required="required" })
</p>
<p>


    <input id="submitl" type="submit" value="送出" class="btn btn-success" style="color:#000000" />

</p>
}
<hr />
@Html.Raw(ViewBag.Result)
